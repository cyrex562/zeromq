{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cargo",
            "command": "build",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build",
            "label": "rust: cargo build"
        },
        {
            "type": "shell",
            "command": "rustfmt",
            "args": [
                "${file}"
            ],
            "label": "rustfmt current file"
        }
    ]
}